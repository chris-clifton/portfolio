        <div class="hidden sm:-my-px sm:ml-6 sm:flex sm:space-x-8">
          <%= link_to 'chrisclifton.dev', root_path, class: 'active-nav-element' %>
          <%= link_to 'Projects', home_projects_path, class: 'nav-element' %>
