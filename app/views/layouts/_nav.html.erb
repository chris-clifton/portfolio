  <div data-target="nav.mobileMenu" class="hidden sm:hidden" id="mobile-menu">
    <div class="pt-2 pb-3 space-y-1">
      <%= link_to 'Projects', home_projects_path, class: 'active-mobile-nav-element' %>
      <%= link_to 'Blog', blog_path, class: 'mobile-nav-element' %>
      <%= link_to 'About', home_about_path, class: 'mobile-nav-element' %>
